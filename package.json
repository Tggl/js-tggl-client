{
  "name": "tggl-client",
  "version": "3.1.0",
  "description": "Tggl Typescript SDK for client and server",
  "keywords": [
    "Tggl",
    "Feature flag",
    "Feature toggle",
    "A/B testing",
    "Remote config",
    "Kill switch"
  ],
  "author": "Nicolas Keller",
  "license": "ISC",
  "homepage": "https://tggl.io/developers/sdks/node",
  "repository": "https://github.com/Tggl/js-tggl-client",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf dist",
    "test": "node --import tsx --test $(find src -name '*.test.ts')",
    "test:coverage": "c8 --reporter=text --reporter=lcov npm test",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json,md}'",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "preversion": "npm test",
    "version": "node scripts/syncVersion.mjs && npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "c8": "^10.1.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fetch-mock": "^12.5.6",
    "prettier": "^3.3.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "ky": "^1.13.0",
    "tggl-core": "^1.4.0"
  }
}
